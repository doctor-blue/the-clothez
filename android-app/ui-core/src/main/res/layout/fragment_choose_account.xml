<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.starlight.module.uicore.custom_views.top_app_bar.TopAppBar
            android:id="@+id/top_bar_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:setTitle="@string/login" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_choose_account"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_bar_login"
            tools:itemCount="20"
            tools:listitem="@layout/item_choose_account" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>