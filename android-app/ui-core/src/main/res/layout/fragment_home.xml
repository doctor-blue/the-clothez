<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/space_screen_small"
        android:paddingTop="@dimen/space_screen_small"
        android:paddingBottom="@dimen/space_screen_super_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_drawer"
                android:layout_width="@dimen/img_size_normal"
                android:layout_height="@dimen/img_size_normal"
                android:background="@drawable/bg_common_btn"
                android:src="@drawable/ic_drawer_menu" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_screen_super_small"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/the_clothez"
                android:textColor="@color/navy"
                android:textSize="@dimen/text_size_20" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_search"
                android:layout_width="@dimen/img_size_normal"
                android:layout_height="@dimen/img_size_normal"
                android:layout_marginEnd="@dimen/space_screen_super_small"
                android:background="@drawable/bg_common_btn"
                android:src="@drawable/ic_search" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_cart"
                android:layout_width="@dimen/img_size_normal"
                android:layout_height="@dimen/img_size_normal"
                android:background="@drawable/bg_common_btn"
                android:src="@drawable/ic_cart" />

        </LinearLayout>

        <fragment
            android:id="@+id/main_fragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/space_screen_super_small"
            app:defaultNavHost="true"
            tools:ignore="FragmentTagUsage" />

    </LinearLayout>
</layout>