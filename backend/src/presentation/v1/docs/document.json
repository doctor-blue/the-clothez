{
    "openapi": "3.0.3",
    "info": {
        "title": "The ClotheZ api - OpenAPI 3.0",
        "contact": {
            "email": "vantan.nguyen0726@gmail.com",
            "url": "https://van-tan.github.io/",
            "name": "Nguyen Van Tan (John)"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3000/api/v1"
        }
    ],
    "tags": [
        {
            "name": "Authentication",
            "description": "Everything about Authentication"
        },
        {
            "name": "Product",
            "description": "Access product"
        }
    ],
    "paths": {
        "/auth/login": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Login to the app",
                "description": "Update an existing pet by Id",
                "operationId": "updatePet",
                "requestBody": {
                    "description": "Update an existent pet in the store",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/LoginRequest"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "Login successful.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/LoginResponse"
                                }
                            },
                            "application/xml": {
                                "schema": {
                                    "$ref": "#/components/schemas/LoginResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Login failure."
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "LoginRequest": {
                "type": "object",
                "properties": {
                    "user_name": {
                        "type": "string",
                        "example": "vantan.nguyen0726@gmail.com"
                    },
                    "password": {
                        "type": "string",
                        "example": "12345678"
                    }
                }
            },
            "LoginResponse": {
                "type": "object",
                "properties": {
                    "data": {
                        "type": "object",
                        "properties": {
                            "access_token": {
                                "type": "string",
                                "example": "string"
                            },
                            "refresh_token": {
                                "type": "string",
                                "example": "string"
                            }
                        }
                    },
                    "status": {
                        "type": "object",
                        "properties": {
                            "code": {
                                "type": "string",
                                "example": "string"
                            },
                            "message": {
                                "type": "string",
                                "example": "string"
                            }
                        }
                    }
                }
            }
        }
    }
}